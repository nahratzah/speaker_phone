<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:layout_weight="1"
    app:columnCount="3"
    app:columnOrderPreserved="true"
    app:layout_columnWeight="1"
    app:layout_gravity="fill"
    app:layout_rowWeight="1"
    app:rowCount="5"
    app:rowOrderPreserved="true"
    tools:context="com.github.nahratzah.speakerphone.BigButtonActivity">

    <Button
        android:onClick="dispatchSpeakActivity"
        android:text="@string/speak_activity_button"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_0_1"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="0"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_0_2"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="0"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:key="activity_big_button_1_0"
        app:layout_row="1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:key="activity_big_button_1_1"
        app:layout_row="1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:key="activity_big_button_1_2"
        app:layout_row="1"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_2_0"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="2"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_2_1"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_2_2"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_3_0"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="3"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_3_1"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="3"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_3_2"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_4_0"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="4"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_4_1"
        android:width="0dp"
        android:height="0dp"
        android:textAllCaps="false"
        app:layout_row="4"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.github.nahratzah.speakerphone.ui.ConfigurableSpeechButton
        app:key="activity_big_button_alert"
        android:width="0dp"
        android:height="0dp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        app:layout_row="4"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>
